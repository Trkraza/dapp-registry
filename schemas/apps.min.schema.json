{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minified Apps List Schema",
  "description": "Schema for data/apps.min.json (generated output)",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "slug",
      "name",
      "logoUrl",
      "category",
      "chains",
      "tags",
      "pricing",
      "short",
      "updatedAt"
    ],
    "properties": {
      "slug": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "logoUrl": {
        "type": "string",
        "description": "Always a Cloudinary URL"
      },
      "category": {
        "type": "string"
      },
      "chains": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "pricing": {
        "type": "string"
      },
      "short": {
        "type": "string"
      },
      "updatedAt": {
        "type": "string",
        "format": "date-time",
        "description": "ISO Timestamp"
      }
    }
  }
}
