{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DApp Metadata Schema",
  "description": "Schema for data/apps/<slug>/meta.json",
  "type": "object",
  "required": [
    "slug",
    "name",
    "logoUrl",
    "category",
    "chains",
    "tags",
    "pricing",
    "content",
    "links",
    "relations"
  ],
  "properties": {
    "slug": {
      "type": "string",
      "description": "Must match parent folder name"
    },
    "name": {
      "type": "string"
    },
    "logoUrl": {
      "type": "string",
      "description": "Can be './logo.png' or 'https://...'"
    },
    "category": {
      "type": "string",
      "examples": ["DeFi", "NFT", "Gaming"]
    },
    "chains": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "pricing": {
      "type": "string",
      "examples": ["Free", "Paid"]
    },
    "content": {
      "type": "object",
      "required": ["short", "description", "meta", "pageTitle"],
      "properties": {
        "short": {
          "type": "string",
          "maxLength": 160
        },
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "string",
          "maxLength": 160
        },
        "pageTitle": {
          "type": "string"
        }
      }
    },
    "links": {
      "type": "object",
      "required": ["website"],
      "properties": {
        "website": {
          "type": "string",
          "format": "url"
        },
        "github": {
          "type": "string",
          "format": "url"
        },
        "docs": {
          "type": "string",
          "format": "url"
        },
        "twitter": {
          "type": "string",
          "format": "url"
        },
        "telegram": {
          "type": "string",
          "format": "url"
        },
        "discord": {
          "type": "string",
          "format": "url"
        }
      }
    },
    "relations": {
      "type": "object",
      "required": ["alternatives", "related"],
      "properties": {
        "alternatives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of existing DApp slugs"
        },
        "related": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of existing DApp slugs"
        }
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "fullyScraped": {
          "type": "boolean",
          "default": true
        }
      }
    }
  }
}
